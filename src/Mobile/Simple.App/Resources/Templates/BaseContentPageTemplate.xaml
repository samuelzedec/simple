<ResourceDictionary
  xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  xmlns:components="clr-namespace:Simple.App.Components.DefaultHeader"
  xmlns:mauiControls="clr-namespace:Microsoft.Maui.Controls;assembly=Microsoft.Maui.Controls"
  xmlns:views="clr-namespace:Simple.App.Views">
  <ControlTemplate x:Key="BasePageTemplate" x:DataType="views:BaseViewPage">
    <Grid RowDefinitions="Auto, *" mauiControls:SafeAreaEdges="None">

      <components:DefaultHeader
        Grid.Row="0"
        IsVisible="{x:TemplateBinding ShowHeader}"
        Title="{x:TemplateBinding HeaderTitle}" />

      <ContentPresenter
        Grid.Row="1"
        Padding="20, 10"
        BackgroundColor="{AppThemeBinding 
          Light={StaticResource BackgroundColorLight},
          Dark={StaticResource BackgroundColorDark}}" />

    </Grid>
  </ControlTemplate>
</ResourceDictionary>